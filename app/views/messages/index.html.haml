.flash-box
.wrapper
  = render 'shared/side_bar'
  .chat-main
    .main-header
      .main-header__left-box
        %h2.main-header__left-box__current-group{"data-group_id" => "12"}
          グループ
        %ul.main-header__left-box__member-list
          Member：
      = link_to "Edit", "edit", class: "main-header__edit-btn"
    .messages
      .message{"data-message_id" => ""}
        .message__upper-info
          %p.message__upper-info__talker メッセージ主
          %p.message__upper-info__data 2019/02/09(sat) 15:33:32
        %p.message__text メッセージテキスト
    .form
      = form_for [@group, @message] do |f|
        = f.text_field :content, class: 'form__message', placeholder: 'type a message'
        .form__mask
          = f.label :image, class: 'form__mask__image' do
            = fa_icon 'picture-o', class: 'icon'
            = f.file_field :image, class: 'hidden'
        = f.submit 'Send', class: 'form__submit'
